        <value>grafana</value>
    </property>
    <property>
        <name>database_user</name>
        <value>root</value>
    </property>
    <property>
        <name>database_password</name>
        <value> </value>
    </property>
    <property>
        <name>database_path</name>
        <value>grafana.db</value>
        <description>For "sqlite3" only, path relative to data_path setting</description>
    </property>
    <property>
        <name>database_ssl_mode</name>
        <value>disable</value>
        <description>For "postgres" only, either "disable", "require" or "verify-full"</description>
    </property>
    <property>
        <name>provider</name>
        <value>file</value>
    </property>
    <property>
        <name>provider_config</name>
        <value>sessions</value>
    </property>
    <property>
